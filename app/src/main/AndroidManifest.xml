<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.gndec.academicportal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".Register" />

        <provider
            android:name=".GNEContentProvider"
            android:authorities="in.ac.gndec.mr"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".HomeStudent"
            android:label="@string/title_activity_home_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeFaculty"
            android:label="@string/title_activity_home_faculty"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>